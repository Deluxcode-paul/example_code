{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    <div{{ attributes.addClass('soc_comt') }}>
      {% for item in items %}
        {% set item_title %}
          <i{{ item.attributes.addClass('fab', 'fa-' ~ item.title) }}></i>
        {% endset %}
        {{ link(item_title, item.url, { 'class': ['soc'], 'rel': 'external'}) }}
      {% endfor %}
    </div>
  {% endif %}
  <a href="mailto:info@cryptogodfather.com" class="mail">info@cryptogodfather.com</a>
{% endmacro %}
