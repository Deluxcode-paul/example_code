<article{{ attributes }}>
  <div class="timer">
    <div class="heading">{{ ('the end of the ICO'|t) }}</div>
    <ul class="countdown js-countdown" id="sidebar_timer" data-date="{{ content.field_ico_end_date|render|striptags|trim }}">
      <li>
        <span class="days">00</span>
        <p class="days_ref">{{ ('days'|t) }}</p>
      </li>
      <li class="seperator">:</li>
      <li>
        <span class="hours">00</span>
        <p class="hours_ref">{{ ('hours'|t) }}</p>
      </li>
      <li class="seperator">:</li>
      <li>
        <span class="minutes">00</span>
        <p class="minutes_ref">{{ ('minutes'|t) }}</p>
      </li>
      <li class="seperator">:</li>
      <li>
        <span class="seconds">00</span>
        <p class="seconds seconds_ref">{{ ('seconds'|t) }}</p>
      </li>
    </ul>
    {%
      set classes = [
        crypto_notifications.anonymous ? 'modal_button anonymous',
        'alarm',
        'violet',
      ]
    %}
    <a href="#alarm"{{ attributes.addClass(classes) }} data-nid="{{ node.id }}" data-vid="{{ revision }}" data-email="{{ crypto_notifications.email }}"><i class="fa fa-bell" aria-hidden="true"></i>{{ ('Set alarm'|t) }}</a>
  </div>
  <div class="heading">
    {% if crypto_notifications.started is empty %}
      {{ ('We will remind you before start and end of this ICO'|t) }}
    {% else %}
      {{ ('We will remind you before the end of this ICO'|t) }}
    {% endif %}
  </div>
  <div class="center">
    <div class="center">
    {%
      set sub_classes = [
        crypto_notifications.anonymous ? 'modal_button anonymous',
        'subscribe_button',
      ]
    %}
    <a href="#subscribe"{{ attributes.removeClass(classes).addClass(sub_classes) }} data-nid="{{ node.id }}" data-vid="{{ revision }}" data-email="{{ crypto_subscribe.email }}"><i class="fa fa-rss" aria-hidden="true"></i>{{ ('Subscribe'|t) }}</a>
  </div>
  <div class="heading">{% trans %}Subscription for {{ node.title.0.value }} new{% endtrans %}</div>
  <div class="diligance">
    {% if node.field_completion_value|keys %}
      <div class="icon"></div>
      <div class="text">
        {{ ('Due diligance'|t) }}
        <span>{{ node.field_completion_value.0.value }}%</span>
      </div>
    {% endif %}
    <a href="#" class="button"><i class="fa fa-usd" aria-hidden="true"></i> {{ ('Order due diligence'|t) }}</a>
  </div>
